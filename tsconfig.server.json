{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": [
    "src/app.ts",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "src/client.ts",
    "src/client-static.ts",
    "src/components/**/*",
    "src/services/**/*"
  ]
}
