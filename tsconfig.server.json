{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": false,
    "sourceMap": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "allowJs": false,
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/app.ts",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "src/client.ts",
    "src/components/**/*",
    "src/services/**/*",
    "src/styles/**/*"
  ]
}
